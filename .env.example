# ntfy-fetch Configuration
# Copy this to .env and update with your values

# === REQUIRED SETTINGS ===

# ntfy Configuration
NTFY_URL=https://your-ntfy-server.com
NTFY_TOPIC=tide-alerts

# === OPTIONAL SETTINGS ===

# ntfy authentication (if your server requires it)
# NTFY_USERNAME=your-username
# NTFY_PASSWORD=your-password

# Application Configuration
NODE_ENV=production
LOG_LEVEL=info
TZ=Pacific/Rarotonga

# Enable event scheduler for precise notification timing
# When true: Notifications at exact times (30min, 10min, 2min before, and at tide time)
# When false: Uses legacy 2-minute window checking
USE_EVENT_SCHEDULER=true

# NOAA API Configuration
NOAA_APPLICATION_NAME=ntfy-fetch
NOAA_STATION_ID=TPT2853  # Default: Arorangi, Rarotonga

# Cache Configuration
CACHE_TTL_HOURS=24
DATA_REFRESH_INTERVAL=6